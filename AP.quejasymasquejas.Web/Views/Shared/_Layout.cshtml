@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quejas y m√°s Quejas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar estilo Reddit -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="brand-icon me-2">üò§</div>
                <span class="brand-text">Quejas<span class="text-warning">y+</span>Quejas</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Barra de b√∫squeda estilo Reddit -->
                <div class="mx-auto search-container d-none d-lg-block">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control search-input" placeholder="Buscar quejas..." disabled />
                    </div>
                </div>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link nav-icon" asp-controller="Home" asp-action="Index" title="Inicio">
                            <i class="bi bi-house-door-fill"></i>
                            <span class="d-lg-none ms-2">Inicio</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-icon" asp-controller="Quejas" asp-action="Index" title="Quejas">
                            <i class="bi bi-card-list"></i>
                            <span class="d-lg-none ms-2">Quejas</span>
                        </a>
                    </li>
                    
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-icon" asp-controller="Quejas" asp-action="Create" title="Crear Queja">
                                <i class="bi bi-plus-square-fill"></i>
                                <span class="d-lg-none ms-2">Crear</span>
                            </a>
                        </li>
                    }
                    
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="main-content">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="footer-brand">üò§ Quejas y m√°s Quejas</span>
                    <p class="footer-text mt-2">El lugar donde tu voz importa.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="footer-text">¬© @DateTime.Now.Year - Proyecto Final PA-601 by G4</p>
                    <p class="footer-slogan">üçº Recuerda: es mejor prevenir que... amamantar üçº</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
