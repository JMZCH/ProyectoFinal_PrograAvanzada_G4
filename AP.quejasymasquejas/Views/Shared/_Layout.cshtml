@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Foodbank · FoodItems</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AP.quejasymasquejas.styles.css" asp-append-version="true" />
</head>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        function changeLoginTexts() {
            document.querySelectorAll('button').forEach(btn => {
                if (btn.textContent.trim() === 'Log in') btn.textContent = 'Iniciar sesión';
            });
            document.querySelectorAll('h2').forEach(h2 => {
                if (h2.textContent.includes('Use a local account to log in'))
                    h2.textContent = 'Usa tu cuenta para iniciar sesión';
            });
            document.querySelectorAll('label').forEach(l => {
                if (l.textContent.trim() === 'Email') l.textContent = 'Correo electrónico';
                if (l.textContent.trim() === 'Password') l.textContent = 'Contraseña';
            });
            document.querySelectorAll('.form-check-label').forEach(l => {
                if (l.textContent.includes('Remember me?')) l.textContent = '¿Recordar contraseña?';
            });
            document.querySelectorAll('a').forEach(a => {
                if (a.textContent.includes('Forgot your password?')) a.textContent = '¿Olvidaste tu contraseña?';
                if (a.textContent.includes('Register as a new user')) a.textContent = 'Registrarse como nuevo usuario';
                if (a.textContent.includes('Resend email confirmation')) a.textContent = 'Reenviar correo de confirmación';
            });
            document.querySelectorAll('input[type="email"]').forEach(i => {
                if (i.placeholder === 'Email') i.placeholder = 'Correo electrónico';
            });
            document.querySelectorAll('input[type="password"]').forEach(i => {
                if (i.placeholder === 'Password') i.placeholder = 'Contraseña';
            });
        }
        changeLoginTexts();
        const interval = setInterval(changeLoginTexts, 500);
        setTimeout(() => clearInterval(interval), 5000);
    });
</script>

<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom shadow-sm mb-3">
            <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                Foodbank · FoodItems
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="FoodItems" asp-action="Index">Productos</a>
                    </li>
                </ul>

                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted text-center py-3 bg-white">
        <div class="container">
            &copy; 2025 · Foodbank · Módulo FoodItems
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
