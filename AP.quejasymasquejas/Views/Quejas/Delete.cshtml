@model AP.quejasymasquejas.Models.Queja

@{
    ViewData["Title"] = "Eliminar Queja";
    var autorNombre = Model.Usuario?.UserName?.Split('@')[0] ?? "Anónimo";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <a asp-action="Index" class="btn btn-link text-muted mb-3 ps-0">
                ← Volver a las quejas
            </a>

            <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">⚠️ ¿Estás seguro?</h5>
                <p class="mb-0">Esta acción eliminará la queja permanentemente y no se puede deshacer.</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">🗑️ Eliminar Queja</h5>
                </div>
                <div class="card-body">
                    <!-- Preview del post a eliminar -->
                    <div class="border rounded p-3 bg-light mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <div class="avatar-circle me-2">
                                @autorNombre.Substring(0, 1).ToUpper()
                            </div>
                            <div>
                                <span class="fw-bold">@autorNombre</span>
                                <br />
                                <small class="text-muted">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                        <h5>@Model.Titulo</h5>
                        <p class="text-muted mb-2">@Model.Descripcion</p>
                        <div>
                            <span class="badge bg-secondary">@Model.Categoria</span>
                            <span class="badge bg-secondary">@Model.Prioridad</span>
                            <span class="badge bg-secondary">@Model.Estado</span>
                        </div>
                    </div>

                    <!-- Botones -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="QuejaID" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                🗑️ Sí, Eliminar Queja
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
