@model AP.quejasymasquejas.Models.Queja

@{
    ViewData["Title"] = "Nueva Queja";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <a asp-action="Index" class="btn btn-link text-muted mb-3 ps-0">
                ← Volver a las quejas
            </a>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📝 Crear Nueva Queja</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        ¡Desahógate! Comparte lo que te molesta con la comunidad.
                    </p>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Título -->
                        <div class="mb-4">
                            <label asp-for="Titulo" class="form-label fw-bold">
                                Título <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Titulo" class="form-control form-control-lg"
                                   placeholder="Ej: El servicio de internet es pésimo" maxlength="200" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                            <small class="text-muted">Sé claro y conciso (máx. 200 caracteres)</small>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold">
                                Descripción <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="6"
                                      placeholder="Describe tu queja con detalle. ¿Qué pasó? ¿Cuándo? ¿Cómo te afectó?"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Categoría y Prioridad -->
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="Categoria" class="form-label fw-bold">Categoría</label>
                                <select asp-for="Categoria" class="form-select">
                                    <option value="General">🏷️ General</option>
                                    <option value="Servicio">🛠️ Servicio</option>
                                    <option value="Producto">📦 Producto</option>
                                    <option value="Atención">👥 Atención al Cliente</option>
                                    <option value="Infraestructura">🏗️ Infraestructura</option>
                                    <option value="Otro">📋 Otro</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Prioridad" class="form-label fw-bold">Prioridad</label>
                                <select asp-for="Prioridad" class="form-select">
                                    <option value="Baja">📝 Baja</option>
                                    <option value="Normal" selected>📋 Normal</option>
                                    <option value="Alta">⚠️ Alta</option>
                                    <option value="Urgente">🔥 Urgente</option>
                                </select>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                🚀 Publicar Queja
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
