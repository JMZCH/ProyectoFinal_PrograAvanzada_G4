@model AP.quejasymasquejas.web.Models.FoodItem
@{
    ViewData["Title"] = "Detalle Food Item";
}

<h1>Detalle Food Item</h1>
<hr />
<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Categoría</dt>
    <dd class="col-sm-9">@Model.Category</dd>

    <dt class="col-sm-3">Marca</dt>
    <dd class="col-sm-9">@Model.Brand</dd>

    <dt class="col-sm-3">Precio</dt>
    <dd class="col-sm-9">@Model.Price?.ToString("N2")</dd>

    <dt class="col-sm-3">Stock</dt>
    <dd class="col-sm-9">@Model.QuantityInStock</dd>

    <dt class="col-sm-3">Rol</dt>
    <dd class="col-sm-9">@Model.Role?.RoleName</dd>

    <dt class="col-sm-3">Activo</dt>
    <dd class="col-sm-9">@((Model.IsActive ?? false) ? "Sí" : "No")</dd>

    <dt class="col-sm-3">Código</dt>
    <dd class="col-sm-9">@Model.Barcode</dd>

    <dt class="col-sm-3">Proveedor</dt>
    <dd class="col-sm-9">@Model.Supplier</dd>

    <dt class="col-sm-3">Fecha agregado</dt>
    <dd class="col-sm-9">@Model.DateAdded</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Ingredientes</dt>
    <dd class="col-sm-9">@Model.Ingredients</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.FoodItemID })">Editar</a>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Volver</a>
</div>
