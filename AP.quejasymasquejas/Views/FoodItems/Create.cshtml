@model AP.quejasymasquejas.web.Models.FoodItem
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Crear producto";
    var roleSelect = ViewData["RoleId"] as SelectList; // viene del controlador
}

<h1>Crear Food Item</h1>
<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Brand" class="form-label"></label>
            <input asp-for="Brand" class="form-control" />
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-md-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Unit" class="form-label"></label>
            <input asp-for="Unit" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="QuantityInStock" class="form-label"></label>
            <input asp-for="QuantityInStock" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="ExpirationDate" class="form-label"></label>
            <input asp-for="ExpirationDate" type="date" class="form-control" />
        </div>

        <div class="col-md-3">
            <div class="form-check mt-4">
                <input asp-for="IsPerishable" class="form-check-input" />
                <label asp-for="IsPerishable" class="form-check-label"></label>
            </div>
        </div>

        <div class="col-md-3">
            <label asp-for="CaloriesPerServing" class="form-label"></label>
            <input asp-for="CaloriesPerServing" class="form-control" />
        </div>

        <div class="col-12">
            <label asp-for="Ingredients" class="form-label"></label>
            <textarea asp-for="Ingredients" class="form-control" rows="2"></textarea>
        </div>

        <div class="col-md-4">
            <label asp-for="Barcode" class="form-label"></label>
            <input asp-for="Barcode" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Supplier" class="form-label"></label>
            <input asp-for="Supplier" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="DateAdded" class="form-label"></label>
            <input asp-for="DateAdded" type="datetime-local" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="RoleId" class="form-label">Rol asociado</label>
            <select asp-for="RoleId" class="form-select" asp-items="roleSelect">
                <option value="">(Sin rol)</option>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <div class="form-check mt-4">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
